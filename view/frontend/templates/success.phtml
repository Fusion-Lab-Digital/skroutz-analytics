/** @var \FusionLab\SkroutzAnalytics\Block\Success $block */
/** @var \Magento\Framework\Escaper $escaper */

$orderData = $block->getOrdersTrackingData();

?>

<?php if (isset($orderData['orders']) && isset($orderData['products'])) :  ?>
    <!-- START Skroutz Analytics send orders and products -->
    <script type="text/javascript" nonce="<?php echo $block->getCspNonce()?>">

        <?php  foreach ($orderData['orders'] as $order) :?>
        skroutz_analytics('ecommerce','addOrder', <?php echo json_encode($order); ?>);
        <?php endforeach;?>

        <?php  foreach ($orderData['products'] as $order) :?>
        skroutz_analytics('ecommerce','addItem', <?php echo  json_encode($order); ?>);
        <?php endforeach ; ?>

    </script>
    <!-- END Skroutz Analytics send orders and products -->
<?php endif;
